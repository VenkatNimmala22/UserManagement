@model UserManagementApp.Models.User

@{
    ViewData["Title"] = "Create New User";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0"><i class="fas fa-user-plus"></i> Create New User</h4>
                </div>
                <div class="card-body">
                    @if (TempData["ErrorMessage"] != null)
                    {
                        <div class="alert alert-danger">
                            <i class="fas fa-exclamation-triangle"></i> @TempData["ErrorMessage"]
                        </div>
                    }
                    
                    <form asp-action="Create" id="createUserForm">
                        <div asp-validation-summary="All" class="text-danger"></div>
                        
                        <div class="mb-3">
                            <label asp-for="Name" class="form-label"></label>
                            <input asp-for="Name" class="form-control" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                            <small class="text-muted">Only letters and spaces are allowed</small>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Email" class="form-label"></label>
                            <input asp-for="Email" class="form-control" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Phone" class="form-label"></label>
                            <input asp-for="Phone" class="form-control" />
                            <span asp-validation-for="Phone" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="DateOfBirth" class="form-label"></label>
                            <input asp-for="DateOfBirth" class="form-control" type="date" />
                            <span asp-validation-for="DateOfBirth" class="text-danger"></span>
                        </div>

                        <div class="d-flex justify-content-between">
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="fas fa-arrow-left"></i> Back to List
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save"></i> Create User
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

<script>
    (function($) {
        var restrictedDomains = ['test.com', 'example.com', 'restricted.com'];
        
        function validateName(name) {
            return /^[a-zA-Z\s]+$/.test(name);
        }
        
        function validateEmail(email) {
            if (!email) return true;
            email = email.toLowerCase();
            for (var i = 0; i < restrictedDomains.length; i++) {
                // Use Unicode escape for '@' to avoid Razor parsing issues
                if (email.indexOf('\u0040' + restrictedDomains[i]) > -1) {
                    return false;
                }
            }
            return true;
        }
        
        $(document).ready(function() {
            $("#createUserForm").on("submit", function(e) {
                var nameInput = $("#Name").val();
                var emailInput = $("#Email").val();
                var isValid = true;
                var errors = [];
                
                if (!validateName(nameInput)) {
                    errors.push("Name can only contain letters and spaces");
                    isValid = false;
                }
                
                if (!validateEmail(emailInput)) {
                    errors.push("This email domain is not allowed");
                    isValid = false;
                }
                
                if (!isValid) {
                    e.preventDefault();
                    alert(errors.join("\n"));
                    return false;
                }
                
                return true;
            });
        });
    })(jQuery);
</script>